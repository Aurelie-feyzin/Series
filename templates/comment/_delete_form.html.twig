<form method="post" action="{{ path('comment_delete', {'programSlug': programSlug ,'seasonNumber':seasonNumber, 'episodeNumber': episodeNumber, 'comment_id': commentId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentId) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
</form>
