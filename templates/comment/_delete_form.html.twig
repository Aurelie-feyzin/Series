<form method="post" action="{{ path('comment_delete', {'programSlug': comment.episode.season.program.slug ,'seasonNumber':comment.episode.season.number, 'episodeNumber': comment.episode.number, 'comment_id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
    <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
</form>
