{% apply inky_to_html|inline_css(source('@styles/foundation-emails.css')) %}
    <container>
        <row class="header">
            <columns>
                <a href="{{ url('index') }}">
                    <img src="{{ email.image('@images/logo_200x200.png') }}" class="logo" alt="SpaceBar Logo"> </a>
            </columns>
        </row>
        {% block content %}
        {% endblock %}
        <row class="footer">
            <columns>
                <p>A bientôt,</p>
                <p>L'équipe de <em>Série</em></p>
            </columns>
        </row>
        <row class="bottom">
            <columns>
                <center>
                    <spacer size="20"></spacer>
                    <div>
                        Sent with ❤️ from the friendly folks at Series
                    </div>
                </center>
            </columns>
        </row>
    </container>
{% endapply %}
