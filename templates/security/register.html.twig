{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="mb-3 font-weight-normal text-center">{{ 'account.register'|trans }}</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {#
                {{ form_row(registrationForm.agreeTerms) }}
        #}
        <button class="btn btn-lg btn-primary mt-3 text-center">{{ button_label|default('account.register'|trans) }}</button>
        {{ form_end(registrationForm) }}

    </div>
{% endblock %}
