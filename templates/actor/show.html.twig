{% extends 'base.html.twig' %}

{% block title %}{{ actor.displayName }}{% endblock %}

{% block main %}
    <div class="container-fluid">
        <h1 class="mt-0 text-center">{{ actor.displayName | title }}</h1>
        <div class="media media-bg">
            <img class="align-self-center mr-3"
                 src="{{ actor.poster?: asset('build/images/actor/placeholder_actor.png') }}"
                 alt="{{ actor.poster? actor.displayName : 'placeholder actor' }} poster">
            <div class="media-body pr-3">
                <h2> Series : </h2>
                {% for program in actor.programs %}
                    <div>
                        <h3><a
                                    href="{{ path('program_show', {'slug': program.slug}) }}">{{ program.title }}</a></h3>
                        <p>{{ program.synopsis?: 'pas de resumé pour l\'instant' }}</p>
                    </div>
                {% else %}
                    Pas de série pour l'instant.
                {% endfor %}
                <p><span class="float-right">dernière maj: {{ actor.updatedAt | date('d/m/Y') }}</span></p>
            </div>
        </div>
    </div>
{% endblock %}
